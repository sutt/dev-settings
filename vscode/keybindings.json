// Place your key bindings in this file to overwrite the defaults
[
//Toggle Editor <-> Terminal
{
    "key": "alt+q",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
},
{
    "key": "alt+q",
    // "command": "workbench.action.focusFirstEditorGroup",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
},
//Terminal Test Selection
{
    "key": "alt+a",
    "command": "workbench.action.terminal.selectAll",
    "when": "terminalFocus"
},
{
    "key": "alt+s",
    "command": "workbench.action.terminal.selectToPreviousCommand",
    "when": "terminalFocus"
},

{
    "key": "shift+alt+u",
    "command": "workbench.action.terminal.selectToPreviousLine",
    //"command": "workbench.action.terminal.scrollToPreviousCommand",
    "when": "terminalFocus"
},
{
    "key": "shift+alt+y",
    // "command": "workbench.action.terminal.selectToPreviousLine",
    "command": "workbench.action.terminal.scrollToPreviousCommand",
    "when": "terminalFocus"
},
//Terminal Tab Navigation
{
    "key": "alt+k",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
},
{
    "key": "shift+alt+down",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
},
{
    "key": "shift+alt+up",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
},
{
    "key": "ctrl+shift+up",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
},
{
    "key": "ctrl+shift+down",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
},
// Misc
{
    "key": "ctrl+shift+h",
    "command": "workbench.action.switchWindow"
    
},
//Editor Movements - P, L, M
{
    "key": "alt+p",
    "command": "workbench.action.evenEditorWidths"   
    
},
{
    "key": "alt+m",
    "command": "workbench.action.maximizeEditor"   
    
},
{
    "key": "alt+l",     //overrides findInSelection
    "command": "workbench.action.toggleEditorGroupLayout"   
    
},
//Terminal Movements - (P/O), L, M
{
    //this works for editors+panel+sidebar
    "key": "ctrl+alt+p",    
    // "command": "workbench.action.toggleMaximizedPanel"
    // "command": "workbench.action.toggleCenteredLayout"    
    "command": "workbench.action.increaseViewSize"    
},
{
    //this works for editors+panel+sidebar
    "key": "ctrl+alt+o",    
    "command": "workbench.action.decreaseViewSize"
    "command": "-workbench.action.terminal.clear"
    
},
{
    "key": "ctrl+alt+l",    
    "command": "workbench.action.togglePanelPosition"    
},
{
    "key": "ctrl+alt+m",    
    "command": "workbench.action.toggleMaximizedPanel"
    // "command": ["workbench.action.evenEditorWidths", "workbench.action.toggleMaximizedPanel"]
    // "command": "workbench.action.evenEditorWidths  || workbench.action.toggleMaximizedPanel"
}

]